<div class="row">
  <div class="col span-6">
    <label class="acc-label" for="azure-client-id">
      {{t "modalAddCloudKey.azure.clientId.label"}}
      <FieldRequired />
    </label>
    <Input
      @classNames="form-control"
      @id="azure-client-id"
      @type="text"
      @value={{mut config.clientId}}
    />
  </div>
  <div class="col span-6">
    <label class="acc-label" for="azure-client-secret">
      {{t "modalAddCloudKey.azure.clientSecret.label"}}
      <FieldRequired />
    </label>
    <Input
      @classNames="form-control"
      @id="azure-client-secret"
      @type="password"
      @value={{mut config.clientSecret}}
    />
  </div>
</div>
<div class="row">
  <div class="col span-6">
    <label class="acc-label" for="azure-tenant-id">
      {{t "modalAddCloudKey.azure.tenantId.label"}}
      {{#if tenantIdRequired}}
        <FieldRequired />
      {{/if}}
    </label>
    <Input
      @classNames="form-control"
      @id="azure-tenant-id"
      @type="text"
      @value={{mut config.tenantId}}
    />
    {{#unless tenantIdRequired}}
      <p class="help-block">{{t "modalAddCloudKey.azure.tenantId.help"}}</p>
    {{/unless}}
  </div>
  <div class="col span-6">
    <label class="acc-label" for="azure-subscription-id">
      {{t "modalAddCloudKey.azure.subscriptionId.label"}}
      <FieldRequired />
    </label>
    <Input
      @classNames="form-control"
      @id="azure-subscription-id"
      @type="text"
      @value={{mut config.subscriptionId}}
    />
  </div>
</div>